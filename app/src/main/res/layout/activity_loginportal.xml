<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/teabackground"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha=".4">

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150.0dip"
                android:layout_height="150.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30.0dip"
                android:src="@drawable/mmustlogoo" />
            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:text="STUDENT PORTAL LOGIN"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>


            <EditText
                android:id="@+id/loginreg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittextshape"
                android:layout_below="@+id/loginText"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Registration Number"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/regno"
                android:textColorHint="@color/darkwhite"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/loginPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/loginreg"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittextshape"
                android:drawableStart="@drawable/password"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/darkwhite"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp" />
            <Button
                android:id="@+id/login"
                android:textAllCaps="true"
                android:background="@drawable/loginbutton"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_below="@id/loginPass"
                android:layout_height="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:onClick="LoginButtonPortal"
                android:text="Login" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>