<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/teabackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha=".4">

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200.0dip"
                android:layout_height="200.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/mmustlogoo" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ff6c6c6c" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dip"
                android:text="@string/masinde_muliro_university"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dip"
                android:text="@string/of_science_and_technology"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pobox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:layout_centerHorizontal="true"
                android:onClick="PoBox"
                android:layout_marginTop="35.0dip"
                android:text="P. O. BOX 190-50100, Kakamega"
                android:textColor="@color/colWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pobox"
                android:onClick="Phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dip"
                android:text="Phone no: 056-31375"
                android:textColor="@color/colWhite"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:onClick="Email"
                android:layout_marginBottom="25.0dip"
                android:layout_marginTop="15.0dip"
                android:text="info@mmust.ac.ke"
                android:textColor="@color/colWhite"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>