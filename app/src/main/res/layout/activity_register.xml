<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/teabackground">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".4"
        android:background="@drawable/background_fade">

    </FrameLayout>

    <TextView
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/fb_holder"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="false"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="#f5f5f5"
        android:layout_below="@id/toptext"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/fullname"
        android:textCursorDrawable="@drawable/cursor"
        android:background="@drawable/edittextshape"
        android:hint="Full Name"
        android:textColorHint="@color/darkwhite"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/nameavatar"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="textPersonName"
        android:layout_below="@id/avatar"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:textCursorDrawable="@drawable/cursor"
        android:background="@drawable/edittextshape"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/mail"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawablePadding="10dp"
        android:hint="Registration Number"
        android:textColorHint="@color/darkwhite"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_below="@id/fullname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:textCursorDrawable="@drawable/cursor"
        android:hint="Password"
        android:textColorHint="@color/darkwhite"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/password"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:drawablePadding="10dp"
        android:background="@drawable/edittextshape"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/signup"
        android:textAllCaps="true"
        android:background="@drawable/loginbutton"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:text="@string/signup2"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
